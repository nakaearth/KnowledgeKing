= form_for @answer,:url=>"/knowledges/#{@answer.knowledge_id}/answer" do |f|
  -if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :answer
    = f.text_area :answer
  .actions
    = f.submit 'Save'
